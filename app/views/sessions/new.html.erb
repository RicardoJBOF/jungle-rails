<header class="page-header">
<h1 class='login-style'>Login</h1>
</header>
<div class='login-style2'>
  <%= form_tag '/sessions' do %>
    <div class='space-lines'>
      Email:
    </div> 
    <div class='space-lines'>
      <%= text_field_tag :email %>
    </div>
    <div class='space-lines'>
      Password: 
    </div class='space-lines'>
    <div class='space-lines'>
      <%= password_field_tag :password %>
    </div>
    <div class='space-lines'>
      <%= submit_tag "Submit" %>
    </div>

  <% end %> 
</div>